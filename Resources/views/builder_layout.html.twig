{% extends "::builder_base_layout.html.twig" %}

{% block title %}
	{% if title is defined %}
		{{title}}
	{% else %}
		{{ parent() }}
	{% endif %}
{% endblock %}

{# HEADER page layout #}
{% block header %}
	{# <div class="mt-5">
				<img src="{{ asset( '/assets/Banner_CO-HOP_vert2.png' ) }}" alt="banner" class="main_banner"/>
			</div> #}

	{% if page.slug is defined and page.slug == 'accueil' %}
		<div class="banner mt-5">
			<div class="banner-text-top">BI&Egrave;RE ARI&Eacute;GEOISE</div>
			<!-- Bière ariégeoise -->
			<img src="{{ asset( '/assets/Banner_CO-HOP_vert2.png' ) }}" alt="banner" class="w-100"/>
			<div class="banner-text-bottom">Naturellement brassée à Lèze</div>
			<!-- Naturellement brassée à Lèze -->
		</div>
		<div class="slogan mb-2">
			<div>Pour une bière vivante et une Ariège écologique et responsable!</div>
		</div>

		<div class="banner-logos row m-0">
			<div class="col d-flex">
				<img class="logo-icon m-auto" src="{{ asset( '/assets/img/Logo vert Nature et progrès.jpg' ) }}" alt="mention Nature et Progrès">
			</div>
			<div class="col d-flex">
				<img class="logo-icon m-auto" src="{{ asset( '/assets/img/bio-white.png' ) }}" alt="Biologique">
			</div>
			<div class="col d-flex">
				<img class="logo-icon m-auto" src="{{ asset( '/assets/img/LOGO_SCOP-1024x610.png' ) }}" alt="logo scop coopérative">
			</div>
		</div>
	{% else %}
		<div class="banner-bg">
			<img src="{{ asset( '/assets/Banner_CO-HOP_vert2.png' ) }}" alt="banner" class="w-100"/>
		</div>
	{% endif %}

	{# {{ render(controller("BuilderPageBundle:Builder/BuildContent:buildDefaultContent", {'selectposition': 'Header'})) }} #}
{% endblock %}

