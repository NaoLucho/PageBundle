		{# {{ render(controller("BuilderPageBundle:Builder/BuildContent:menuPrincipal", {'menuName': 'Principal', 'request': (request is defined ? request : app.request )})) }} #}
	</div>

{% endblock %}


{% block body %}
	Default
{% endblock %}


{% block footer %}
	{{ render(controller("BuilderPageBundle:Builder/BuildContent:buildDefaultContent", {'selectposition': 'Footer'})) }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{# Possible aussi d'ajouter un fichier js #}
	{% stylesheets '@AdminBundle/Resources/public/css/body_layout.css' %}
	<link rel="stylesheet" href="{{ asset_url }}"/>
	{% endstylesheets %}
{% endblock %}
