{% extends "::builder_base_layout.html.twig" %}

{% block title %}
    {% if title is defined %}{{title}}
    {% else %}{{ parent() }}
    {% endif %}
{% endblock %}

{% block header %}
    {{ render(controller("BuilderPageBundle:Builder/BuildContent:buildDefaultContent", {'selectposition': 'Header'})) }}
{% endblock %}

{% block menu %}
    <div class="main-logo">
        <img src="{{ asset( '/assets/LOGO_GAMBETTA.png'  ) }}" alt="logo" class="logo-img"/> 
        <img src="{{ asset( '/assets/climbers3.png'  ) }}" alt="banner" class="banner-img"/> 
    </div>
    <div id="menu" class="main-menu">
        {{ render(controller("BuilderPageBundle:Builder/BuildContent:buildDefaultContent", {'selectposition': 'Menu'})) }}
      {# {{ render(controller("BuilderPageBundle:Builder/BuildContent:menuPrincipal", {'menuName': 'Principal', 'request': (request is defined ? request : app.request )})) }} #}
    </div>
    
{% endblock %}


{% block body %}
    Default
{% endblock %}

{% block footer %}
    {{ render(controller("BuilderPageBundle:Builder/BuildContent:buildDefaultContent", {'selectposition': 'Footer'})) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# Possible aussi d'ajouter un fichier js #}
    {% stylesheets '@AdminBundle/Resources/public/css/body_layout.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %} 
{% endblock %}